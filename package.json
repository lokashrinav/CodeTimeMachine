{
  "name": "codetimemachine",
  "version": "0.1.0",
  "description": "A flight recorder for developers - capture and replay coding sessions",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/cli.js",
    "build": "npm run build:cli && npm run build:extension && npm run build:viewer",
    "build:cli": "node build/build-cli.js",
    "build:extension": "cd extension && npm run compile",
    "build:viewer": "cd viewer && npm run build",
    "dev:viewer": "cd viewer && npm run dev",
    "test": "jest"
  },
  "bin": {
    "ctm": "./src/cli.js"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "simple-git": "^3.19.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.8",
    "jest": "^29.6.2"
  },
  "keywords": [
    "developer",
    "recording",
    "replay",
    "coding",
    "session",
    "timeline"
  ],
  "author": "CodeTimeMachine Team",
  "license": "MIT"
}
